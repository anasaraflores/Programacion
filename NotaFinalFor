#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace stda;

void main()
{ float N, NF, NP, P1, P2, P3, EF, P, Id;
 cout <<" Ingrese numeo de estudiantes"<< endl;
 cin <<N;
 for(i=1;i=N;i++){
	 cout <<" Ingrese nota practica: "<<endl;
     cin <<NP;
	 cout <<" Ingrese primer parcial: "<<endl;
     cin <<P1;
	 cout <<" Ingrese segundo patcial: "<<endl;
     cin <<P2;
	 cout <<" Ingrese tercer parcial: "<<endl;
     cin <<P3;
	 cout <<" Ingrese examen final: "<<endl;
     cin <<EF;
	 NF=(NP*0.2)+((P1+P2+P3)/3)*0.4+(EF*0.4);
cout <<"La nota final es:"<<NF<<endl;
 }
 getch();
}
